{
  "parser": "babel-eslint",

  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],

  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "blockBindings": true,
      "forOf": true,
      "jsx": true,
      "modules": true
    }
  },

  "env": {
    "browser": true,
    "es6": true,
    "mocha": true,
    "node": true,
    "jquery": true
  },

  "plugins": [
    "react"
  ],

  "rules": {
    "indent": [1, 2, {"SwitchCase": 1}],
    "no-console": 1,
    "react/no-unescaped-entities": 0,
    "semi": [1, "never"]
  }
}

